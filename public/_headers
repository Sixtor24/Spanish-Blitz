# Cache static assets for 1 year
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Never cache HTML files to ensure users get latest version
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Root path (SPA)
/
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0
